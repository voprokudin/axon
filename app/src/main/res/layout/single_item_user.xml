<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/bottom_stroke"
    android:paddingLeft="@dimen/single_item_padding_large"
    android:paddingRight="@dimen/single_item_padding_large"
    android:paddingBottom="@dimen/single_item_padding_medium"
    android:paddingTop="@dimen/single_item_padding_medium">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUserAvatar"
        android:layout_width="@dimen/circle_image_view_medium"
        android:layout_height="@dimen/circle_image_view_medium" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/single_item_padding_large"
        android:paddingRight="@dimen/single_item_padding_large">

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_medium"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/font_size_small"/>

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_size_small"/>

    </RelativeLayout>

</LinearLayout>